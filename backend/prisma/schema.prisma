generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id            String   @id @default(uuid())
  amount        Decimal
  currency      String
  status        String
  created_at    DateTime @default(now())
  customer_email String
}

model IdempotencyKey {
  key          String   @id
  response_json Json
}
